#include <stdio.h>

int main(){
    int start, stop, i, sum;

    printf("Enter the start of the range: ");
    scanf("%d", &start);

    printf("Enter the end of the range: ");
    scanf("%d", &stop);

    for(i = start; i <= stop; i++){
        if(i % 2 == 0){
            sum = sum + i;
        }
    }

    printf("The Sum of the even numbers is %d", sum);



    return 0;
}
